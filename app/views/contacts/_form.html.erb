<%= simple_form_for(contact) do |f| %>
  <% if contact.errors.any? %>
    <div class="errors-container">
      <ul>
        <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  <div class="form-group">
    <%= f.input :name, :placeholder => 'Your Name', class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.input :email, :placeholder => 'your email address', class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.input :content, :placeholder => 'Messgase', class: 'form-control'%>
  </div>
  <%= f.submit class: 'btn btn-info' %>
  <%= f.button :button, 'Reset', type: :reset, class: 'btn btn-outline-info' %>

  <% end %>

