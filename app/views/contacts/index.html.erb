<br />

<div class="container">
  <div class="wrapper mt-5 col-md-10 offset-md-1">
    <% Contact.all.each do |m| %>
      <div class="notification py-3">
        <div class="notification-content">
          <h3><%= m.name %></h3>
          <p><strong>Email:</strong> <%= m.id %></p>
          <p><strong>Message:</strong> <%= m.content %> </p>
        </div>
        <div class="notification-actions">
          <%= link_to raw('Delete <i class="far fa-trash-alt"></i>'),contacts_path(@contact), method: "delete",  data: { confirm: "Are you sure you want to delete this message? " } %>
        </div>
      </div>
    <% end %>
  </div>
</div>

