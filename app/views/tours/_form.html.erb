<%= simple_form_for(tour) do |f| %>
  <% if tour.errors.any? %>
    <div class="errors-container">
      <ul>
        <% tour.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  <div class="form-group">
    <%= f.input :name, :placeholder => 'Nice Name', class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.input :details, :placeholder => 'content go here', class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.input :price, :placeholder => 'Price in USD', class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.input :location, :placeholder => 'HangDong-ChiangMai', class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>

  </div>
  <div class="form-group">
    <%= f.input :photo_one %>
    <%= f.input :photo_cache, as: :hidden %>

  </div>
  <div class="form-group">
    <%= f.input :photo_two %>
    <%= f.input :photo_cache, as: :hidden %>

  </div>
  <div class="form-group">
    <%= f.input :photo_three %>
    <%= f.input :photo_cache, as: :hidden %>

  </div>
  <%= f.submit class: 'btn btn-info' %>
  <%= f.button :button, 'Cancel', type: :reset, class: 'btn btn-outline-info' %>

  <% end %>
