<%= simple_form_for(tour) do |f| %>
  <% if tour.errors.any? %>
    <div class="errors-container">
      <ul>
        <% tour.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.input :name, :placeholder => 'Kyoto Green', class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.input :details, :placeholder => 'Write something nice to sell your tour', class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.input :cost, :placeholder => '2500', class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.input :location, :placeholder => '1234, Gojo Dori, Kyoto, 23098', class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <div class="form-group">
    <%= f.input :photo_one %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <div class="form-group">
    <%= f.input :photo_two %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <div class="form-group">
    <%= f.input :photo_three %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <%= f.submit class: 'btn btn-info' %>
  <%= link_to 'Cancel', providers_tours_path, class: 'btn btn-outline-info' %>

<% end %>
